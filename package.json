{
  "name": "snipe-vscode",
  "displayName": "snipe.vscode",
  "description": "Quick tabs switching inspired by snipe.nvim",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "snipe-vscode.switchTab",
        "title": "Snipe: Switch Tab"
      }
    ],
    "configuration": {
      "title": "Snipe VSCode",
      "properties": {
        "snipe-vscode.showCurrentTab": {
          "type": "boolean",
          "default": false,
          "description": "Show the currently active tab in the tab switcher"
        }
      }
    },
    "keybindings": [
      {
        "command": "snipe-vscode.switchTab",
        "key": "ctrl+t",
        "mac": "cmd+t",
        "when": "editorTextFocus || editorFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.96.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "eslint": "^9.16.0",
    "typescript": "^5.7.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
